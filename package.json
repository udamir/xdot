{
  "name": "dotx",
  "version": "1.0.0",
  "description": "",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist",
    "browser"
  ],
  "browser": {
    "./dist/cjs/index.js": "./browser/dotx.umd.js"
  },
  "exports": {
    ".": {
      "import": "./browser/dotx.es.js",
      "require": "./browser/dotx.umd.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc --module commonjs --outDir dist/cjs && vite build",
    "test": "jest --verbose",
    "prepublish": "rm -r dist || true && npm run build && npm run test",
    "test:coverage": "jest --verbose --coverage",
    "build:web": "vite build"
  },
  "keywords": [
    "template",
    "engine",
    "fast",
    "simple",
    "templating"
  ],
  "author": "Damir Yusipov",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^18.0.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.2",
    "typescript": "^4.6.2",
    "vite": "^3.0.0",
    "vite-plugin-dts": "^1.2.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*(\\.|/)(test|spec))\\.(ts?|tsx?|js?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "collectCoverage": true
  }
}
